page{
  background: #f6f6f6;
  position: relative;
  min-height: 100vh;
}



.edition{
  text-align: center;
  font-size: 24rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 40rpx;
  color:#a09999;
}



.card {
  width:700rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  box-shadow: 0rpx 6rpx 6rpx rgba(26, 26, 26, 0.1);
  margin: 30rpx auto 0 auto;
  display: flex;
  flex-direction: column;
  padding: 0 24rpx 36rpx 24rpx;
  box-sizing: border-box;
}

.card-title {
  font-size: 42rpx;
  color: #333333;
  text-align: center;
  margin-top: 50rpx;
}

.card-detail {
  display: flex;
  flex-direction: column;
  margin-top: 24rpx;
}

.title {
  font-size: 35rpx;
  display: block;
  position: relative;
  height: 64rpx;
  line-height: 64rpx;
  padding-left: 60rpx;
}

.title::before{
  display: block;
  position: absolute;
  content: ' ';
  width: 8rpx;
  height: 34rpx;
  background:rgba(136,188,157,1);
  border-radius: 4rpx;
  left: 20rpx;
  top: 15rpx;
}

.desc {
  color: #999999;
  font-size: 32rpx;
  margin-top: 12rpx;
}